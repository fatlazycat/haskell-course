cabal-version:       >=1.10

executable helloworld
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >= 4 && < 5
  hs-source-dirs:      src
  default-language:    Haskell2010

library
  build-depends: base >= 4 && < 5
               , containers >= 0.5.5.1
               , mtl
  hs-source-dirs: src
  default-language: Haskell2010
  exposed-modules: Lecture1.Lecture1
                 , Lecture2.LogAnalysis
                 , Lecture2.Log
                 , Lecture3.Golf
                 , Lecture4.Code
                 , Lecture5.Calc
                 , Lecture5.ExprT
                 , Lecture5.Parser
                 , Lecture5.StackVM
                 , Lecture6.Fibonacci
                 , Lecture7.JoinList
                 , Lecture7.Scrabble
                 , Lecture7.Sized
                 , Lecture7.Buffer
                 , Lecture7.StringBufEditor
                 , Lecture7.StringBuffer
                 , Lecture7.Editor
                 , Lecture8.Party
                 , Lecture8.Employee

test-suite test
  default-language: Haskell2010
  type: exitcode-stdio-1.0
  hs-source-dirs: tests
  main-is: Test.hs
  build-depends:
                  base >= 4 && < 5
                , containers
                , course
                , tasty >= 0.10.1
                , tasty-hunit >= 0.9.1
                , tasty-rerun >= 1.1.3
                , tasty-quickcheck
                , QuickCheck
